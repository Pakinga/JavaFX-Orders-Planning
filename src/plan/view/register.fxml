<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dakar.controller.Controller">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane prefHeight="450.0" prefWidth="450.0" style="-fx-background-color: #88ddbe;">
            <children>
                <Label layoutX="80.0" layoutY="100.0" text="User name:" textAlignment="RIGHT" textFill="#385d8a">
                    <font>
                        <Font name="Tahoma" size="14.0" />
                    </font></Label>
                <Label layoutX="87.0" layoutY="135.0" prefHeight="20.0" prefWidth="66.0" text="Password:" textAlignment="RIGHT" textFill="#385d8a">
                    <font>
                        <Font name="Tahoma" size="14.0" />
                    </font></Label>
                <TextField fx:id="regUser" layoutX="160.0" layoutY="95.0" prefHeight="25.0" prefWidth="215.0" style="-fx-background-color: #e3e2de;">
                    <font>
                        <Font size="14.0" />
                    </font></TextField>
                <PasswordField fx:id="regPassw" layoutX="160.0" layoutY="130.0" prefHeight="25.0" prefWidth="215.0" style="-fx-background-color: #e3e2de;">
                    <font>
                        <Font size="14.0" />
                    </font></PasswordField>
                <Label fx:id="error" alignment="CENTER" layoutX="40.0" layoutY="310.0" prefHeight="27.0" prefWidth="370.0" text="error" textFill="#9b1c31">
                    <font>
                        <Font size="14.0" />
                    </font></Label>
                <Button fx:id="regSignin" layoutX="160.0" layoutY="380.0" mnemonicParsing="false" onAction="#registerLogin" prefHeight="35.0" prefWidth="215.0" style="-fx-background-color: #b2a4d5;" text="Register" textFill="#385d8a">
               <font>
                  <Font name="DejaVu Sans Bold" size="14.0" />
               </font></Button>
                <Button fx:id="close" layoutX="408.0" layoutY="24.0" mnemonicParsing="false" onAction="#closeWindow" style="-fx-background-color: #f5d787;" text="X" textAlignment="CENTER" visible="false" />
                <Label layoutX="34.0" layoutY="170.0" prefHeight="20.0" prefWidth="117.0" text="Confirm Password:" textAlignment="RIGHT" textFill="#385d8a">
                    <font>
                        <Font name="Tahoma" size="14.0" />
                    </font>
                </Label>
                <Label layoutX="112.0" layoutY="205.0" text="Email:" textAlignment="RIGHT" textFill="#385d8a">
                    <font>
                        <Font name="Tahoma" size="14.0" />
                    </font>
                </Label>
                <PasswordField fx:id="regConfPassw" layoutX="160.0" layoutY="165.0" prefHeight="25.0" prefWidth="215.0" style="-fx-background-color: #e3e2de;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </PasswordField>
                <TextField fx:id="regEmail" layoutX="160.0" layoutY="200.0" prefHeight="25.0" prefWidth="215.0" style="-fx-background-color: #e3e2de;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <Label fx:id="regError" layoutX="26.0" layoutY="340.0" prefHeight="30.0" prefWidth="399.0" text="regError" textAlignment="RIGHT" textFill="#9b1c31">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <CheckBox fx:id="admin" layoutX="158.0" layoutY="280.0" mnemonicParsing="false" />
                <Label layoutX="18.0" layoutY="280.0" text="Administrator permition" textFill="#385d8a">
               <font>
                  <Font name="Tahoma" size="13.0" />
               </font></Label>
            <ComboBox layoutX="160.0" layoutY="235.0" prefHeight="25.0" prefWidth="215.0" promptText="-- Choose Team --" />
            <Pane layoutY="-1.0" prefHeight="68.0" prefWidth="450.0" style="-fx-background-color: #b2a4d5;">
               <children>
                      <Label layoutX="10.0" layoutY="8.0" prefHeight="53.0" prefWidth="430.0" styleClass="style.css" text="Register New Team Member" textAlignment="CENTER" textFill="#385d8a">
                          <font>
                              <Font name="Roboto Light" size="33.0" />
                          </font>
                      </Label>
               </children>
            </Pane>
            <Label layoutX="70.0" layoutY="239.0" text="Team Name:" textAlignment="RIGHT" textFill="#385d8a">
               <font>
                  <Font name="Tahoma" size="14.0" />
               </font>
            </Label>
            </children>
        </Pane>
    </children>
</GridPane>
