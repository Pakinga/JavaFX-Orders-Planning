<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="plan.controller.Controller">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane prefHeight="350.0" prefWidth="450.0" style="-fx-background-color: #adc7c0;">
            <children>
                <Label layoutX="68.0" layoutY="123.0" text="Username:" textFill="#385d8a">
                    <font>
                        <Font name="Tahoma" size="18.0" />
                    </font>
                </Label>
                <Label layoutX="71.0" layoutY="180.0" text="Password:" textFill="#385d8a">
                    <font>
                        <Font name="Tahoma" size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="username" layoutX="160.0" layoutY="115.0" prefHeight="40.0" prefWidth="215.0" style="-fx-background-color: #e0dfe4; -fx-border-color: #a2a6a5; -fx-border-radius: 3; -fx-text-fill: #385d8a;">
                    <font>
                        <Font name="Roboto Light" size="18.0" />
                    </font>
                </TextField>
                <PasswordField fx:id="password" layoutX="160.0" layoutY="172.0" prefHeight="40.0" prefWidth="215.0" style="-fx-background-color: #e0dfe4; -fx-border-color: #a2a6a5; -fx-border-radius: 3; -fx-text-fill: #385d8a;">
                    <font>
                        <Font size="18.0" />
                    </font>
                </PasswordField>
                <Button fx:id="loginBtn" layoutX="160.0" layoutY="280.0" mnemonicParsing="false" onAction="#login" prefHeight="41.0" prefWidth="100.0" style="-fx-background-color: #c1b8d6; -fx-border-color: #a2a6a5; -fx-border-radius: 3;" text="Login" textFill="#385d8a">
                    <font>
                        <Font name="DejaVu Sans Bold" size="14.0" />
                    </font>
                </Button>
                <Label fx:id="error" alignment="CENTER" layoutX="40.0" layoutY="218.0" prefHeight="53.0" prefWidth="370.0" textFill="#9b1c31">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <Button fx:id="signin" layoutX="275.0" layoutY="280.0" mnemonicParsing="false" onAction="#register" prefHeight="41.0" prefWidth="100.0" style="-fx-background-color: #c1b8d6; -fx-border-color: #a2a6a5; -fx-border-radius: 3;" text="Register" textFill="#385d8a">
                    <font>
                        <Font name="DejaVu Sans Bold" size="14.0" />
                    </font>
                </Button>
                <Pane prefHeight="81.0" prefWidth="450.0" style="-fx-background-color: #c1b8d6; -fx-border-color: #a2a6a5;">
                    <children>
                        <Label alignment="CENTER" layoutX="4.0" layoutY="14.0" prefHeight="53.0" prefWidth="442.0" styleClass="style.css" text="Let's make orders plan" textFill="#385d8a">
                            <font>
                                <Font name="Roboto Light" size="26.0" />
                            </font>
                        </Label>
                    </children>
                </Pane>
            </children>
        </Pane>
    </children>
</GridPane>
